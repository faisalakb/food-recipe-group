<!-- foods/missing_foods.html.erb -->

<div class="container">
  <h1>Missing Foods List</h1>

  <ul>
    <% @missing_foods.each do |food| %>
      <li><%= food.name %></li>
    <% end %>
  </ul>

  <p>Total Items: <%= @total_items %></p>
  <p>Total Price: <%= number_to_currency(@total_price) %></p>
</div>
