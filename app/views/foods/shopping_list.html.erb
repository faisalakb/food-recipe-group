<!-- app/views/foods/shopping_list.html.erb -->
<div class="container">
  <h1 class="head-section">Shopping List</h1>
  <ul class="shopping_list">
    <% @missing_foods.each do |food| %>
      <li><%= food.name %></li>
    <% end %>
  </ul>
  <div class="total">
    <p>Total Food Items: <%= @total_items %></p>
    <p>Total Price: <%= number_to_currency(@total_price) %></p>
  </div>
</div>
