<div class="container">
  <header class="head-section">
    <h1 class="page-title">List of Recipes</h1>
    <%= link_to "New Recipe", new_recipe_path, class: "click-me" %>
  </header>

  <main>
    <ul class="recipes_list"> <!-- Added the class here -->
      <% if @recipes.empty? %>
        <li>No Recipes.</li>
      <% else %>
        <% @recipes.each do |recipe| %>
          <li>
            <%= link_to "#{recipe.name} <br> By: #{recipe.user.try(:name) || 'Unknown User'}".html_safe, recipe_path(recipe), class: "recipe-name".html_safe %>
            <% if can? :destroy, recipe %>
              <%= button_to "Delete", recipe, method: :delete, data: { confirm: "Are you sure you want to delete this recipe?" }, class: "click-me" %>
            <% end %>
          </li>
        <% end %>
      <% end %>
    </ul>
  </main>
</div>
